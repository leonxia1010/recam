{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "RempSQLServer": "",
    "RempMongoDb": ""
  },
  "DatabaseSettings": {
    "DatabaseName": ""
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId"]
  },
  "Jwt": {
    "Key": "",
    "Issuer": "Recam.API",
    "Audience": "Recam.API",
    "ExpiresInMinutes": 60
  }
}
